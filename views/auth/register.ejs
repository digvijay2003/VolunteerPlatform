
<section class="vh-100" style="background-color: #fff; padding-top: 20px; overflow-x: hidden;">
    <div class="container-fluid h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="text-black p-md-3 mb-2" style="border-radius: 25px; background-color: #ffffff;">
                    <div class="row justify-content-center mx-2">
                        <div class="col-12 col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                            <h1 class="text-center mb-5 mx-1 mx-md-4 mt-4">VOLUNTEER REGISTRATION</h1>
                            <form action="/volunteer-registration" method="POST">
                                <div class="mb-3">
                                    <label for="username" class="form-label"><span class="material-symbols-outlined">person</span></label>
                                    <input type="text" class="form-control" id="username" name="username" value="" placeholder="username" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label"><span class="material-symbols-outlined">mail</span></label>
                                    <input type="email" class="form-control" id="email" name="email" value="" placeholder="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label"><span class="material-symbols-outlined">key</span></label>
                                    <input type="password" class="form-control" id="password" name="password" value="" placeholder="password" required>
                                </div>
                                <div class="mb-3">
                                    <label for="location" class="form-label"><span class="material-symbols-outlined">add_location</span></label>
                                    <input type="text" class="form-control" id="location" name="location" value="" placeholder="location" required>
                                </div>
                                <div class="d-flex justify-content-center mb-3">
                                    <button type="submit" class="btn btn-primary col-lg-12">Register</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-12 col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 volunteer-image"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>