    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f5f5;
        }

        .intro {
            background-image: url('https://source.unsplash.com/1600x900/?food');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            padding: 2rem;
            color: #fff;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 1rem;
        }

        .card-body {
            padding: 2.5rem;
        }

        .form-outline {
            margin-bottom: 1.5rem;
        }

        .form-outline label {
            margin-top: 0.5rem;
            color: #495057;
            font-weight: 500;
        }

        .form-control {
            border-radius: 0.5rem;
            height: 3rem;
            padding-left: 1rem;
            font-size: 1rem;
        }

        textarea.form-control {
            height: 6rem;
        }

        .btn {
            border-radius: 0.5rem;
            font-weight: 500;
            font-size: 1.1rem;
            padding: 0.75rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .text-center h2,
        .text-center h1 {
            font-family: 'Margarine', cursive;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .btn-check-requests {
            margin-top: 2rem;
            text-align: center;
        }

        .btn-check-requests a {
            text-decoration: none;
        }

        .btn-check-requests button {
            font-size: 1rem;
            padding: 0.5rem 1rem;
            background-color: #ffc107;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
            color: #fff;
            transition: background-color 0.3s ease;
        }

        .btn-check-requests button:hover {
            background-color: #e0a800;
        }

        @media (max-width: 767.98px) {
            .intro {
                padding: 1rem;
            }

            .card-body {
                padding: 1.5rem;
            }
        }
    </style>
</head>

<body>
    <section class="intro">
        <div class="container">
            <div class="row justify-content-center my-5">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="mb-5 text-center">Find Nearby Requests</h2>
                            <form action="/nearby-requests" method="post">
                                <div class="form-outline">
                                    <input type="text" id="location_nearby" name="location_nearby" class="form-control" required />
                                    <label class="form-label" for="location_nearby">Enter Your Location</label>
                                </div>
                                <button type="submit" class="btn btn-primary col-12 btn-rounded btn-block">Find Requests</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="mb-5 text-center">Donate Food</h1>
                            <form action="/feedhope-donation-food" method="post">
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-outline">
                                            <input type="text" id="donor" name="donor" class="form-control" required />
                                            <label class="form-label" for="donor">Your Name</label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-outline">
                                            <input type="text" id="foodtype" name="foodtype" class="form-control" required />
                                            <label class="form-label" for="foodtype">Type of Food</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-outline">
                                    <input type="number" id="amount" name="quantity[amount]" class="form-control" required min="1" />
                                    <label class="form-label" for="amount">Quantity</label>
                                </div>

                                <div class="form-outline">
                                    <select id="unit" name="quantity[unit]" class="form-control" required>
                                        <option value="kg">kg</option>
                                        <option value="liter">liter</option>
                                        <option value="pieces">pieces</option>
                                    </select>
                                    <label class="form-label" for="unit">Unit</label>
                                </div>

                                <div class="form-outline">
                                    <textarea id="quantity_description" name="quantity[description]" class="form-control" required></textarea>
                                    <label class="form-label" for="quantity_description">Quantity Description</label>
                                </div>

                                <div class="form-outline">
                                    <input type="text" id="location" name="location" class="form-control" required />
                                    <label class="form-label" for="location">Location</label>
                                </div>

                                <div class="form-outline">
                                    <textarea id="description" name="description" class="form-control" required></textarea>
                                    <label class="form-label" for="description">Description</label>
                                </div>

                                <button type="submit" class="btn btn-success col-12 btn-rounded btn-block">Submit Donation</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 text-center btn-check-requests">
                    <a href="/feedhope-request-donation-list"><button>Check Existing Requests</button></a>
                </div>
            </div>
        </div>
    </section>