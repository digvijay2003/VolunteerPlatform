<div class="container-fluid">
  <h1 class="text-center mb-4">Upcoming Events</h1>
  <p class="text-center mb-5">Join us in making a difference! Here are our upcoming events where you can volunteer and help those in need.</p>

  <% if (events && events.length > 0) { %>
    <div class="row g-4">
      <% events.forEach(event => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% if (event.imageUrl) { %>
              <img src="<%= event.imageUrl %>" class="card-img-top" alt="Event Image">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text"><strong>Description:</strong> <%= event.description %></p>
              <p class="card-text"><strong>Date:</strong> <%= event.date.toDateString() %></p>
              <p class="card-text"><strong>Location:</strong> <%= event.location.city %>, <%= event.location.state %></p>
              <p class="card-text"><strong>Organizer:</strong> <%= event.organizer.name %></p>
              <p class="card-text"><strong>Status:</strong> 
                <span class="badge bg-<%= event.status === 'Active' ? 'success' : 'secondary' %>"><%= event.status %></span>
              </p>
              <div class="mt-auto d-flex justify-content-between">
                <a class="btn btn-outline-primary" href="/events/<%= event._id %>">Details</a>
                <a class="btn btn-danger" href="/volunteer?event=<%= event._id %>">Volunteer</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center">
      <p class="text-muted">No events found. Check back later!</p>
    </div>
  <% } %>
</div>