
<section class="vh-100" style="background-color: #fff;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="text-black p-md-3" style="border-radius: 25px; background-color: #ffffff;">
                        <div class="row justify-content-center mx-2">
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-1 my-1 contactUs-image"></div>
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">
                                <h1 class="text-center mb-2 mx-1 mx-md-4 mt-4">Contact Us</h1>
                                <form action="/feedhope-contact_Us" method="POST">
                                    <div class="mb-3">
                                        <label for="username" class="form-label"><span class="material-symbols-outlined">person</span></label>
                                        <input type="text" class="form-control rounded-4 border border-4" id="username" name="username" placeholder="username" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label"><span class="material-symbols-outlined">mail</span></label>
                                        <input type="email" class="form-control rounded-4 border border-4" id="email" name="email" placeholder="email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="contact" class="form-label"><span class="material-symbols-outlined">add_call</span></label>
                                        <input type="tel" class="form-control rounded-4 border border-4" id="contact" name="contact" placeholder="98050xxxxx" required>
                                    </div>
                                    <div class="form-floating">
                                        <textarea class="form-control mb-2 rounded rounded-4 border border-4" placeholder="Leave a comment here" id="floatingTextarea" name="message"></textarea>
                                        <label for="floatingTextarea">Comments</label>
                                    </div>
                                    <div class="d-flex justify-content-center mb-3">
                                        <button type="submit" class="btn btn-success rounded-4 col-12">SUBMIT</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
