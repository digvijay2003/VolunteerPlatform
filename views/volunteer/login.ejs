<div class="container d-flex justify-content-center align-items-center vh-100 login mb-2">
  <div class="card shadow-lg p-4">
    <h1 class="text-center mb-4"><%= title || 'Login' %></h1>
    <p class="text-center text-muted mb-4"><%= subtitle || 'Please log in to access your profile.' %></p>
    <form action="<%= action %>" method="POST">
      <% fields.forEach(field => { %>
        <div class="mb-3">
          <label for="<%= field.id %>" class="form-label">
            <% if (field.icon) { %>
              <span class="material-symbols-outlined"><%= field.icon %></span>
            <% } %>
          </label>
          <input 
            type="<%= field.type %>" 
            class="form-control" 
            id="<%= field.id %>" 
            name="<%= field.name %>" 
            placeholder="<%= field.placeholder || '' %>" 
            <%= field.required ? 'required' : '' %>
          >
        </div>
      <% }); %>
      <div class="d-flex flex-column align-items-center">
        <button type="submit" class="btn btn-primary d-grid gap-2 col-12 col-md-6"><%= submitLabel || 'Submit' %></button>
        <% if (showRegisterButton) { %>
          <div class="mt-3 text-center">
            <span>Don't have an account?</span>
            <a href="<%= registerLink || '#' %>" class="text-danger mt-2">Create an account</a>
          </div>
        <% } %>
      </div>
    </form>
  </div>
</div>