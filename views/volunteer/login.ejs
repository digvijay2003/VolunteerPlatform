<section class="d-flex align-items-center justify-content-center py-5" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4" style="border-radius: 1rem;">
                    <div class="card-body p-5">
                        
                        <div class="d-flex justify-content-between mb-4">
                            <a href="/feedhope" class="btn btn-outline-secondary" style="border-radius: 0.5rem; transition: all 0.3s ease;">
                                <span class="material-symbols-outlined align-middle me-1">arrow_back</span>
                                Back to Home
                            </a>
                            <a href="/volunteer-login" class="btn btn-primary" style="background-color: #0d6efd; border-color: #0d6efd; border-radius: 0.5rem; transition: all 0.3s ease;">
                                Volunteer Login
                            </a>
                        </div>
                        
                        <div class="text-center mb-5">
                            <h2 class="display-6 fw-bold text-dark mb-2" style="color: #343a40 !important;">
                                <%= title || 'User Login' %>
                            </h2>
                            <p class="lead text-muted">
                                <%= subtitle || 'Please log in to your account.' %>
                            </p>
                        </div>
                        
                        <form action="<%= action %>" method="POST">
                            <% fields.forEach(field => { %>
                                <div class="mb-4">
                                    <label for="<%= field.id %>" class="form-label fw-semibold text-dark">
                                        <%= field.label %>
                                    </label>
                                    <input 
                                        type="<%= field.type %>" 
                                        class="form-control form-control-lg" 
                                        id="<%= field.id %>" 
                                        name="<%= field.name %>" 
                                        placeholder="<%= field.placeholder || field.label %>"
                                        <%= field.required ? 'required' : '' %>
                                        style="border-radius: 0.5rem; border: 1px solid #ced4da; transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;"
                                        onfocus="this.style.borderColor='#86b7fe'; this.style.boxShadow='0 0 0 0.25rem rgba(13, 110, 253, 0.25)';"
                                        onblur="this.style.borderColor='#ced4da'; this.style.boxShadow='none';"
                                    >
                                </div>
                            <% }); %>
                            
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg fw-bold" style="background-color: #28a745; border-color: #28a745; border-radius: 0.5rem; transition: all 0.3s ease;">
                                    <%= submitLabel || 'Login' %>
                                </button>
                            </div>
                            
                            <% if (showRegisterButton) { %>
                                <div class="text-center mt-4">
                                    <p class="text-muted mb-0">
                                        Don't have an account? <a href="<%= registerLink || '#' %>" class="text-decoration-none fw-bold" style="color: #0d6efd;">Create one here</a>
                                    </p>
                                </div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>