<div class="container-fluid my-5">
  <h1 class="dashboard-title text-center mb-5 text-white opacity-75"><u>DASHBOARD</u></h1>

  <div class="profile-container container p-4 rounded-3 bg-light">

    <div class="profile-actions d-flex justify-content-between mb-4">
      
      <a href="/volunteer-profile/edit" class="btn btn-primary btn-sm">Profile Settings</a>
      <a href="/logout" class="btn btn-danger btn-sm ">Logout</a>
    </div>

    <div class="row mb-5">
      <div class="col-md-8">
        <h3 class="fw-bold text-dark"><%= volunteer.username %></h3>
        <p class="text-muted">Email : <%= volunteer.email %></p>
        <p class="text-muted">Role: <strong><%= volunteer.role %></strong></p>
        <p>Status: 
          <span class="badge bg-<%= volunteer.status === 'active' ? 'success' : 'danger' %>">
            <%= volunteer.status %>
          </span>
        </p>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-md-6">
        <h5 class="fw-bold">Contact Information</h5>
        <ul class="list-unstyled">
          <li><strong>Phone:</strong> <%= volunteer.phone %></li>
          <li><strong>Location:</strong> <%= volunteer.location %></li>
          <li><strong>Emergency Contact:</strong> <%= volunteer.emergencyContact.name %> (<%= volunteer.emergencyContact.phone %>)</li>
        </ul>
      </div>
      <div class="col-md-6">
        <h5 class="fw-bold">Additional Details</h5>
        <ul class="list-unstyled">
          <li><strong>Availability:</strong> <%= volunteer.availability %></li>
          <li><strong>Rating:</strong> 
            <span class="badge bg-warning text-dark">
              <%= volunteer.rating.toFixed(1) %>/5
            </span>
          </li>
        </ul>
      </div>
    </div>

    <div class="row mt-4">
      <h5 class="mb-3">Location Map</h5>
      <div id="map" class="mt-4 rounded shadow-sm" style="height: 400px;"></div>
    </div>

  </div>
</div>

<script>
  const mapToken = '<%- mapboxToken %>';
  const volunteer = <%- JSON.stringify(volunteer) %>;
</script>

<script src="../javaScript/map.js"></script>

