<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .flash-message {
            margin-bottom: 20px;
        }
        .dashboard-section {
            border: 2px solid #030c16;
            border-radius: 10px;
            background-color: #f8f9fa;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }
        h3 {
            color: #030f1c;
            font-weight: bold;
        }
        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <a href="/admin/logout" class="btn btn-danger mt-4">Logout</a>
        <h1 class="text-center mb-4">Welcome to the Admin Dashboard</h1>

        <!-- Flash Messages -->
        <% if (messages.length > 0) { %>
            <div class="flash-message">
                <% messages.forEach((message) => { %>
                    <div class="alert alert-<%= message.type %>" role="alert">
                        <%= message.text %>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <!-- Request Assistance Section -->
        <section class="dashboard-section p-4">
            <h3 class="text-center mb-4">Request Assistance</h3>
            <div class="mb-4 text-center">
                <a href="/admin/request-donations" class="btn btn-primary">View Requests.</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Count</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Requests</td>
                        <td><%= totalRequests %></td>
                        <td>Number of donation requests received.</td>
                    </tr>
                    <tr>
                        <td>Pending Requests</td>
                        <td><%= pendingRequests %></td>
                        <td>Requests awaiting review.</td>
                    </tr>
                    <tr>
                        <td>Completed Requests</td>
                        <td><%= completedRequests %></td>
                        <td>Successfully fulfilled requests.</td>
                    </tr>
                    <tr>
                        <td>Rejected Requests</td>
                        <td><%= rejectedRequests %></td>
                        <td>Requests that were rejected.</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Donations Section -->
        <section class="dashboard-section p-4">
            <h3 class="text-center mb-4">Donations</h3>
            <div class="mb-4 text-center">
                <a href="/admin/request-donations" class="btn btn-primary">View Donations.</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Count</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Donations</td>
                        <td><%= totalDonations %></td>
                        <td>Number of donations made.</td>
                    </tr>
                    <tr>
                        <td>Pending Donations</td>
                        <td><%= pendingDonations %></td>
                        <td>Donations pending approval.</td>
                    </tr>
                    <tr>
                        <td>Successful Donations</td>
                        <td><%= successfulDonations %></td>
                        <td>Donations that were successful.</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Volunteers Section -->
        <section class="dashboard-section p-4">
            <h3 class="text-center mb-4">Volunteers</h3>
            <div class="mb-4 text-center">
                <a href="/admin/request-donations" class="btn btn-primary">View Volunteers.</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Count</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Volunteers</td>
                        <td><%= totalVolunteers %></td>
                        <td>Number of registered volunteers.</td>
                    </tr>
                </tbody>
            </table>
        </section>

        <!-- Queries Section -->
        <section class="dashboard-section p-4">
            <h3 class="text-center mb-4">Queries</h3>
            <div class="mb-4 text-center">
                <a href="/admin/check-queries" class="btn btn-primary">View Queries.</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Count</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Total Queries</td>
                        <td><%= totalQueries %></td>
                        <td>Number of queries submitted by users.</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>